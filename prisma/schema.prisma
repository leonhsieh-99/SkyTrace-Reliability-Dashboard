generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model IngestRun {
  id Int @id @default(autoincrement())
  startedAt DateTime @default(now())
  endedAt DateTime?

  ingestOk Boolean @default(false)
  reliabilityAt DateTime?
  enrichAt DateTime?

  snapshots Snapshot[]
  reliabilities Reliability[]
  weatherCells WeatherCell[]

  @@index([startedAt])
}

model Snapshot {
  id Int @id @default(autoincrement())
  runId Int
  hourOffset Int
  createdAt DateTime @default(now())
  count Int
  parseOk Boolean @default(true)
  error Json?

  run IngestRun @relation(fields: [runId], references: [id], onDelete: Cascade)
  observations Observation[]

  @@unique([runId, hourOffset])
  @@index([hourOffset, createdAt])
  @@index([createdAt])
}

model Observation {
  snapshotId Int
  balloonIndex Int
  lat Float?
  lon Float?
  alt Float?
  parseOk Boolean @default(true)
  raw Json?
  errors Json?

  snap Snapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  @@id([snapshotId, balloonIndex])
  @@index([balloonIndex])
}

model Reliability {
  runId Int
  balloonIndex Int
  
  score Float
  missingCount Int
  teleportCount Int
  maxGap Int
  reasons Json?

  updatedAt DateTime @default(now()) @updatedAt
  run IngestRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@id([runId, balloonIndex])
  @@index([runId, score])
  @@index([updatedAt])
}

model WeatherCell {
  id Int @id @default(autoincrement())
  runId Int

  latBucket Float
  lonBucket Float

  snapshotId Int
  time DateTime

  temp2m Float?
  windspeed10m Float?
  winddir10m Float?
  pressureMsl Float?

  createdAt DateTime @default(now())

  run IngestRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@unique([snapshotId, time, latBucket, lonBucket])
  @@index([snapshotId, time])
}