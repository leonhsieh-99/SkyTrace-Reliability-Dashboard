generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Snapshot {
  id Int @id @default(autoincrement())
  hourOffset Int
  createdAt DateTime @default(now())
  count Int
  parseOk Boolean @default(true)
  error Json?

  observations Observation[]

  @@index([hourOffset, createdAt])
}

model Observation {
  snapshotId Int
  balloonIndex Int
  lat Float?
  lon Float?
  alt Float?
  parseOk Boolean @default(true)
  raw Json?
  errors Json?
  snap Snapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  @@id([snapshotId, balloonIndex])
  @@index([balloonIndex])
}

model Reliability {
  balloonIndex Int @id
  score Float
  missingCount Int
  teleportCount Int
  maxGap Int
  reasons Json?
  updatedAt DateTime @default(now()) @updatedAt

  @@index([updatedAt])
}