generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model IngestRun {
  id Int @id @default(autoincrement())
  startedAt DateTime @default(now())
  endedAt DateTime?

  ingestOk Boolean @default(false)
  reliabilityAt DateTime?
  enrichAt DateTime?

  snapshots Snapshot[]
  reliabilities Reliability[]

  @@index([startedAt])
}

model Snapshot {
  id Int @id @default(autoincrement())
  runId Int
  hourOffset Int
  createdAt DateTime @default(now())
  count Int
  parseOk Boolean @default(true)
  error Json?

  run IngestRun @relation(fields: [runId], references: [id], onDelete: Cascade)
  observations Observation[]

  @@unique([runId, hourOffset])
  @@index([hourOffset, createdAt])
  @@index([createdAt])
}

model Observation {
  snapshotId Int
  balloonIndex Int
  lat Float?
  lon Float?
  alt Float?
  parseOk Boolean @default(true)
  raw Json?
  errors Json?

  snap Snapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  @@id([snapshotId, balloonIndex])
  @@index([balloonIndex])
}

model Reliability {
  runId Int
  balloonIndex Int
  
  score Float
  missingCount Int
  teleportCount Int
  maxGap Int
  reasons Json?

  updatedAt DateTime @default(now()) @updatedAt
  run IngestRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@id([runId, balloonIndex])
  @@index([runId, score])
  @@index([updatedAt])
}

model WeatherCacheCell {
  id Int @id @default(autoincrement())

  // key
  time DateTime // exact UTC hour timestamp (e.g. 2026-01-07T20:00:00Z)
  latBucket Decimal @db.Decimal(6,3)
  lonBucket Decimal @db.Decimal(6,3)
  model String // e.g. "gfs", "hrrr"
  varsVersion String @default("v1")

  // weather vars (hourly)
  temp2m Float?
  windspeed10m Float?
  winddir10m Float?
  pressureMsl Float?
  precipitation Float?
  windgusts10m Float?

  createdAt DateTime @default(now())

  @@unique([time, latBucket, lonBucket, model, varsVersion])
  @@index([model, varsVersion, time])
  @@index([time])
}
